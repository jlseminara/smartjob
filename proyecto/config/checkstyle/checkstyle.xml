<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="haltOnException" value="false"/>
    <property name="cacheFile" value="target/cache_xdocs"/>
    <property name="localeLanguage" value="en"/>

    <!-- Regexp -->
    <module name="RegexpOnFilename">
        <property name="id" value="pascalCaseFileName"/>
        <property name="fileNamePattern" value="^[A-Z][a-zA-Z0-9]*$"/>
        <property name="folderPattern" value="^[a-z][a-zA-Z0-9]*$"/>
        <property name="ignoreFileNameExtensions" value="true"/>
        <property name="match" value="true"/>
        <message key="regexp.filename.mismatch"
                 value="Filenames should be in PascalCase"/>
    </module>
    <module name="RegexpSingleline">
        <property name="id" value="noTrailingWhitespace"/>
        <property name="format" value="\s+$"/>
        <property name="minimum" value="0"/>
        <property name="maximum" value="0"/>
        <property name="message" value="Trailing whitespace is not allowed"/>
    </module>
    <module name="RegexpSingleline">
        <property name="id" value="noDefaultProperties"/>
        <property name="format" value="^\w+\s*=\s*\(default\).*"/>
        <property name="message" value="(default) properties are not allowed"/>
    </module>

    <!-- Miscellaneous -->
    <module name="NewlineAtEndOfFile"/>

    <module name="TreeWalker">

        <module name="PackageDeclaration"/>

        <!-- Miscellaneous -->
        <module name="CommentsIndentation"/>
    </module>
</module>